{
  "name": "@wag-wise-mentor/backend",
  "version": "0.0.0",
  "description": "NestJS backend for Wag Wise Mentor",
  "author": "Wag Wise Mentor Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "mocha --require ts-node/register --require tsconfig-paths/register --require ./test/setup.ts 'src/**/*.spec.ts' 'test/**/*.spec.ts'",
    "test:watch": "mocha --require ts-node/register --require tsconfig-paths/register --require ./test/setup.ts --watch 'src/**/*.spec.ts' 'test/**/*.spec.ts'",
    "test:cov": "nyc mocha --require ts-node/register --require tsconfig-paths/register --require ./test/setup.ts 'src/**/*.spec.ts' 'test/**/*.spec.ts'",
    "test:coverage": "nyc mocha --require ts-node/register --require tsconfig-paths/register --require ./test/setup.ts 'src/**/*.spec.ts' 'test/**/*.spec.ts'",
    "coverage:report": "nyc report",
    "coverage:check": "nyc check-coverage",
    "coverage:clean": "rm -rf coverage .nyc_output",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/mocha --require ./test/setup.ts 'src/**/*.spec.ts' 'test/**/*.spec.ts'"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@supabase/supabase-js": "^2.58.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "nestjs-zod": "^5.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.2.0",
    "nyc": "^17.1.0",
    "prettier": "^3.0.0",
    "sinon": "^15.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
